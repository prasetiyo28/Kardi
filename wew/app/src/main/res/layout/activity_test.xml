<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dev7.wew.Test"
    android:background="@drawable/bg_su">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bgfix">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Isikan Sesuai Diri Anda!"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"/>

        <android.support.v7.widget.CardView
            app:cardCornerRadius="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:orientation="vertical"
                android:padding="10dp">
                <com.github.florent37.materialtextfield.MaterialTextField
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    app:mtf_labelColor="@color/colorPrimary">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Umur"
                        android:textSize="16sp"
                        android:textColor="@color/text"
                        android:inputType="number"
                        android:textStyle="bold"/>

                </com.github.florent37.materialtextfield.MaterialTextField>


                <Spinner
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/lulusan"
                    android:layout_width="250dp"
                    android:layout_height="60dp"
                    android:entries="@array/Lulusan"
                    android:backgroundTint="@color/colorPrimary"
                    android:padding="10dp">

                </Spinner>


                <Spinner
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/bidang"
                    android:layout_width="250dp"
                    android:layout_height="60dp"
                    android:entries="@array/Bidang"
                    android:backgroundTint="@color/colorPrimary">
                </Spinner>

                <Button
                    android:id="@+id/BtnSubmit"
                    android:layout_gravity="center"
                    android:layout_width="160dp"
                    android:layout_height="60dp"
                    android:background="@drawable/button_style"
                    android:text="SUBMIT"
                    android:textSize="16sp"

                    android:textColor="@color/white"/>


            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>


</LinearLayout>
